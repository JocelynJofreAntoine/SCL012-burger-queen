{
    "database": {
        "rules": "database.rules.json"
    },
    "storage": {
        "rules": "dist"
    },
    "hosting": {
        "public": "src",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }]
    }
}